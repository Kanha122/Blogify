<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Document</title>

<link rel="stylesheet" href="/stylesheet/home.css">

</head>
<body class="bg-dark">
    <%- include("./partials/nav") %>

    <div class="container mt-3">
        <div class="row row-cols-4">
   <% posts.forEach((post)=>{ %>
    <div class="col">
    <div class="card col p-2 mb-2" style="width: 18rem;">
        <img src="<%= post.postImage %>" class="card card-img-top mt-1 rounded-mg" alt="...">
        <div class="card-body">
          <h4 class="card-title"><%= post.title %></h4>
          <h6 class="card-title"><%= post.meaning %></h6>
          <a href="/post/<%= post._id %>" class="btn btn-primary">View</a>
        </div>
      </div>
      </div>
    <% }) %>
   </div>
    </div>



    <%- include("./partials/script") %>
</body>
</html>